---
const { greeting = 'Hello', name ,thumbnailSrc = '{Astro.resolve("/bannar/1.jpg")' } = Astro.props;

---


<div class="container-fluid">
  <div>
    <h1>{greeting}</h1>
    <p>{name}</p>
    <img src={thumbnailSrc}/>
  </div>
</div>
<style lang="scss">
  .container-fluid {
    position: relative;
    color: black;
    margin: 0;
    padding-inline: 15rem;
    padding-block: 15rem;
h1,p{
  position: relative;
  z-index: 3;
  color:#fff;
}
    img {
      object-fit: cover;
      position: absolute;
      top: 0;
      right: 0;
      left: 0;
      content: '';
      background: #f9ec17;
      width: 100%;
      height: 100%;
      display: flex;
      z-index: -1;
    
    }
    &::before{
        position: absolute;
        content: ' ';
        display: block;
        background-color: rgba(0, 0, 0, 0.50);
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 1;
      }
  }
</style>